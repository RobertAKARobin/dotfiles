{
	"security.restrictUNCAccess": false, // This is a security vulnerability!

	// #region Text formatting
	"editor.fontSize": 11,
	"editor.scrollBeyondLastLine": false,
	"editor.wordWrap": "on",
	// #endregion

	// #region Whitespaces
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 2,
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"gremlins.showInProblemPane": true,
	// #endregion

	// #region Appearance
	"editor.fontWeight": "400",
	"editor.minimap.enabled": false,
	"explorer.compactFolders": false,
	"workbench.colorTheme": "Visual Studio Dark",
	// #endregion

	// #region VS UI stuff
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"extensions.ignoreRecommendations": true,
	"security.workspace.trust.untrustedFiles": "open",
	"settingsSync.ignoredSettings": [],
	"update.mode": "start",
	"workbench.editor.closeEmptyGroups": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.enablePreview": false,
	"workbench.startupEditor": "newUntitledFile",
	// #endregion

	// #region Trying to disable most kinds of autosuggest
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.autoClosingQuotes": "never",
	// "editor.autoClosingBrackets": "never", // I actually like this one
	"editor.formatOnPaste": false,
	"editor.formatOnSave": false,
	"editor.formatOnType": false,
	"editor.parameterHints.enabled": true,
	"editor.quickSuggestions": {
		"other": "on",
		"comments": "on",
		"strings": "on"
	},
	"editor.suggestOnTriggerCharacters": true,
	"editor.wordBasedSuggestions": "off",
	"html.autoClosingTags": false,
	"workbench.tips.enabled": false,
	// #endregion

	// #region Terminal
	"npm.fetchOnlinePackageInfo": true,
	"git.openRepositoryInParentFolders": "never",
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.allowChords": false,
	"terminal.integrated.altClickMovesCursor": false,
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.rightClickBehavior": "default",
	"terminal.integrated.tabStopWidth": 2,
	"terminal.integrated.confirmOnExit": "hasChildProcesses",
	"terminal.integrated.confirmOnKill": "always",
	// #endregion

	// #region Filesystem
	"files.exclude": {
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false
	},
	// #endregion

	// #region Languages
	"css.validate": false,
	"[css]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},

	"html.autoCreateQuotes": false,

	"[javascript]": {
		"editor.codeLens": true
	},
	"javascript.referencesCodeLens.enabled": true,
	"javascript.suggestionActions.enabled": false,

	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},

	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},

	"[markdown]": {
		"editor.unicodeHighlight.ambiguousCharacters": false,
		"editor.unicodeHighlight.invisibleCharacters": false,
		"editor.wordWrap": "on",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},

	"[powershell]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},

	"[python]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4
	},

	"[ruby]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},

	"scss.validate": false,
	"[scss]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},

	"[shellscript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},

	"[typescript]": {
		"editor.codeLens": true,
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},
	"typescript.referencesCodeLens.enabled": true,
	"typescript.updateImportsOnFileMove.enabled": "never",
	// #endregion

	"files.associations": {
		"*.djt": "django-html",
		"*.html": "html",
		"*.ejs": "html",
		"*.jscad": "javascript",
		"*.js.snap": "html",
		"*.svg": "xml"
	},

	"markdown-pdf.format": "Letter",
	"markdown-pdf.footerTemplate": "",
	"markdown-pdf.headerTemplate": "",
	"markdown-pdf.highlight": false,
	"markdown-pdf.outputDirectory": "~",
	"markdown-pdf.displayHeaderFooter": false,
	"markdown-pdf.markdown-it-include.enable": false,
	"terminal.integrated.enableMultiLinePasteWarning": false,

	"lit-plugin.disable": true // Want the syntax highlighting, not the linting
}
